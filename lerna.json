{
  "version": "independent",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "bump": "patch",
      "yes": true,
      "no-private": true,
      "conventionalCommits": true,
      "npmClient": "npm",
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org/"
    },
    "packages": ["packages/*"]
  }
}
